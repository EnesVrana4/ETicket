@{
}

@model EventEditViewModel

<h1 class="text-center">Create a Event</h1>



<div class="row">
    <form asp-controller="Event" asp-action="CreateEvent" enctype="multipart/form-data" method="post">
        <div class="col-sm-6">


            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="Location"></span>
                <label asp-for="Location"></label>
                <input type="textarea" asp-for="Location" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input type="textarea" asp-for="Description" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="Date"></span>
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" class="form-control">
            </div>
            <div class="form-control flex-fill mb-0 uploadpic">
                <label class="form-label" asp-for="Image" >Upload Image</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image"></span>
            </div>
        </div>

        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary mt-3">Create</button>
        </div>
    </form>

    <a asp-action="ShowEvent" asp-controller="Event">Go Back</a>

</div>





