@using SharedComponents.ViewModel
@using eTicketData.Entities


@model EventEditViewModel
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<section class=" gradient-custom ilgi-fun2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <form asp-controller="Event" asp-action="CreateEvent" enctype="multipart/form-data" method="post">
                                <h2 class="fw-bold mb-4 text-uppercase">Create a Event</h2>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Name" class="form-control form-control-lg" />
                                    <label class="form-label mt-1" asp-for="Name"></label>
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Location" class="form-control form-control-lg" />
                                    <label class="form-label mt-1" asp-for="Location"></label>
                                    <span asp-validation-for="Location"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Description" class="form-control form-control-lg" />
                                    <label class="form-label mt-1" asp-for="Description"></label>
                                    <span asp-validation-for="Description"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Date" class="form-control form-control-lg" />
                                    <label class="form-label mt-1" asp-for="Date"></label>
                                    <span asp-validation-for="Date"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Image" class="form-control form-control-lg" />
                                    <label class="form-label mt-1" asp-for="Image"></label>
                                    <span asp-validation-for="Image"></span>
                                </div>
                                <button type="submit" class="btn btn-ilgiOrange mt-3">Create</button>
                                <a class="btn btn-ilgiOrange ms-3 mt-3 asp-action="ShowEvent" asp-controller="Event">Go Back</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>








