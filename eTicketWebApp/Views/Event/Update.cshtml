@{
}


@model EventViewModel

<h1 class="text-center">Update this Event</h1>



<div class="row">
    <form asp-controller="Event" asp-action="Update" asp-route-id="@ViewBag.EventId" method="post">
        <div class="col-sm-6">


            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="Location"></span>
                <label asp-for="Location"></label>
                <input type="textarea" asp-for="Location" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input type="textarea" asp-for="Description" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="Date"></span>
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" class="form-control">

            </div>
        </div>

        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary mt-3">Update</button>
        </div>
    </form>
    <a asp-action="ShowEvent" asp-controller="Event" >Go Back</a>
</div>
