@using SharedComponents.ViewModel
@using eTicketData.Entities



@model CategoryEditViewModel

<h1 class="text-center">Update this Category</h1>



<div class="row">
    <form asp-controller="Category" asp-action="Update" asp-route-id="@ViewBag.Id" method="post">
        <div class="col-sm-6">


            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">

            </div>
            <div class="form-group">
                <span asp-validation-for="NumOfTickets"></span>
                <label asp-for="NumOfTickets"></label>
                <input type="textarea" asp-for="NumOfTickets" class="form-control">
            </div>
        </div>

        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary mt-3">Update</button>
        </div>
    </form>
    <a asp-action="ShowCategory" asp-controller="Event" >Go Back</a>
</div>
